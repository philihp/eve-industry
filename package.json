{
  "name": "eve-industry",
  "version": "0.0.1",
  "description": "EVE Online Industry Calculations",
  "homepage": "https://github.com/philihp/eve-industry",
  "repository": "https://github.com/philihp/eve-industry.git",
  "main": "./dist/index.js",
  "files": [
    "/dist/",
    "!/dist/**/__tests__/*.*"
  ],
  "sideEffects": false,
  "keywords": [
    "eveonline",
    "industry"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "lint": "eslint src",
    "prepare": "husky install && npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Philihp Busby <philihp@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.24.4",
    "@babel/preset-env": "7.24.4",
    "@babel/preset-typescript": "7.24.1",
    "@philihp/eslint-config": "6.1.0",
    "@types/jest": "29.5.12",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "babel-jest": "29.7.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.4"
  },
  "jest": {
    "clearMocks": true,
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "roots": [
      "src"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "@philihp"
    ],
    "rules": {
      "import/no-unresolved": "off"
    }
  }
}
